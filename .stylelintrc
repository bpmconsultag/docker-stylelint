{
  "extends": "stylelint-config-standard-scss",
  "customSynax": "postcss-sass",
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "alpha-value-notation": null,
    "at-rule-empty-line-before": null,
    "at-rule-name-space-after": null,
    "at-rule-no-vendor-prefix": null,
    "block-closing-brace-newline-after": "always-multi-line",
    "block-opening-brace-space-before": "always",
    "block-no-empty": true,
    "color-function-notation": null,
    "color-hex-case": null,
    "color-hex-length": null,
    "color-no-invalid-hex": true,
    "color-named": "never",
    "comment-empty-line-before": "always",
    "comment-whitespace-inside": "always",
    "comment-no-empty": true,
    "custom-property-empty-line-before": null,
    "custom-property-pattern": "[a-zA-Z0-9-]",
    "declaration-bang-space-before": "always",
    "declaration-block-no-duplicate-properties": [ true, {
        "ignoreProperties": ["cursor"]
    }],
    "declaration-block-no-redundant-longhand-properties": null,
    "declaration-block-trailing-semicolon": "always",
    "declaration-block-semicolon-space-before": "never",
    "declaration-block-single-line-max-declarations": 2,
    "declaration-colon-space-after": "always",
    "declaration-empty-line-before": null,
    "declaration-no-important": true,
    "font-family-name-quotes": null,
    "font-family-no-duplicate-names": true,
    "function-calc-no-unspaced-operator": true,
    "function-comma-space-after": "always",
    "function-url-quotes": null,
    "indentation": 2,
    "length-zero-no-unit": true,
    "keyframes-name-pattern": null,
    "max-empty-lines": 1,
    "max-line-length": 200,
    "media-feature-colon-space-after": "always",
    "media-feature-name-no-vendor-prefix": null,
    "no-empty-source": null,
    "no-invalid-double-slash-comments": true,
    "no-invalid-position-at-import-rule": null,
    "no-missing-end-of-source-newline": null,
    "no-descending-specificity": null,
    "no-duplicate-selectors": true,
    "no-eol-whitespace": true,
    "number-leading-zero": null,
    "number-max-precision": 6,
    "property-no-unknown": true,
    "property-no-vendor-prefix": null,
    "rule-empty-line-before": [ "never", {
      "ignore": [ "inside-block"]
    }],
    "selector-attribute-quotes": null,
    "selector-class-pattern": "[a-zA-Z0-9-]",
    "selector-combinator-space-after": "always",
    "selector-descendant-combinator-no-non-space": true,
    "selector-list-comma-newline-after": "always",
    "selector-max-id": 0,
    "selector-no-vendor-prefix": null,
    "selector-pseudo-element-colon-notation": "double",
    "shorthand-property-no-redundant-values": null,
    "string-quotes": "single",
    "unit-allowed-list": ["rem", "%", "vh", "vw", "ms", "s", "deg", "fr", "em"],
    "value-keyword-case": null,
    "value-no-vendor-prefix": [true, {
      "ignoreValues": ["zoom-in"]
    }],

    # stylelint-scss
    "scss/at-import-partial-extension": null,
    "scss/at-mixin-argumentless-call-parentheses": null,
    "scss/at-mixin-pattern": "[a-zA-Z0-9-]",
    "scss/dollar-variable-colon-space-after": "always",
    "scss/dollar-variable-empty-line-before": null,
    "scss/dollar-variable-pattern": "[a-zA-Z0-9-]",
    "scss/double-slash-comment-empty-line-before": null,
    "scss/no-global-function-names": null,
    "scss/operator-no-unspaced": null
  }
}
